<%= content_for :title, 'My answers' %>

<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--home">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 strip__left">
          <div class="jumbotron">
            <h1 class="title--strip">Answers</h1>
            <p class="intro"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="strip">
    <div class="container">
      <div class="row">

        <%if policy(Answer).index?%>


          <table class="table table-hover">
            <thead>
              <tr>
                <th>My answers</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @answers.each do |answer| %>
              <tr>
                <td>
                  <%= link_to answer.content, answer.question %>
                </td>
                <td>
                  <%= time_ago(answer) %> ago
                </td>
                <td>
                  <%= link_to 'Edit', edit_answer_path(answer) %>
                </td>
              </tr>
              <% end %>

            </tbody>


          </table>

        <%end%>

     </div>
   </div>
 </div>
</section>
