<% if chunk.title %>
  <h2><%= chunk.title %></h2>
<% end %>

<% if chunk.intro %>
  <p><%= fancy_paragraphs(chunk.intro) %></p>
<% end %>

<% chunk.content.split("\n").each do |para| %>
  <p><%= fancy_paragraphs(para) %></p>
<% end %>

<% if chunk.after %>
  <p><%= fancy_paragraphs(chunk.after) %></p>
<% end %>
