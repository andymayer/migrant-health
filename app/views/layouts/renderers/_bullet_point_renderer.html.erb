<% if chunk.title %>
  <h2><%= chunk.title %></h2>
<% end %>

<% if chunk.intro %>
  <p><%= fancy_paragraphs(chunk.intro) %></p>
<% end %>

<ul class="bullets">
  <% chunk.content.split("\n").each do |point| %>
    <li><%= point %></li>
  <% end %>
</ul>

<% if chunk.after %>
  <p><%= fancy_paragraphs(chunk.after) %></p>
<% end %>
