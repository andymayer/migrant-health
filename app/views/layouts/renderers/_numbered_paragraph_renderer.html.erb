<% if chunk.title %>
  <h2><%= chunk.title %></h2>
<% end %>

<% if chunk.intro %>
  <%= nice_paragraph(chunk.intro) %>
<% end %>

<ol class="big-ol">
  <% chunk.content.split("\n").each do |point| %>
    <li><%= point %></li>
  <% end %>
</ol>

<% if chunk.after %>
  <%= nice_paragraph(chunk.after) %>
<% end %>
