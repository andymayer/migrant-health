  <%= f.fields_for bullet_point_chunk do |ff| %>
    <fieldset>
      <legend><%= legend_content %></legend>
      <div class="form-group">
        <%= ff.label :title %>
        <%= ff.text_field :title, class: 'form-control', placeholder: "#{title_placeholder_content}" %>
      </div>
      <div class="form-group">
        <%= ff.label :intro %>
        <%= ff.text_area :intro, class: 'form-control', size: "60x6", placeholder: "Introductory Section Paragraph" %>
      </div>
     <p class="help-block">Enter bullet points, each point on a new line.</p>
      <div class="form-group">
        <%= ff.label 'Bullet Points' %>
        <%= ff.text_area :content, class: 'form-control', size: "60x24", placeholder: "Bullet Points" %>
      </div>
      <div class="form-group">
        <%= ff.label :after %>
        <%= ff.text_area :after, class: 'form-control', size: "60x6", placeholder: "After paragraph" %>
      </div>
    </fieldset>
<% end %>
