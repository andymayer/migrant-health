<div role="tabpanel" class="tab-pane" id="<%= tab_id %>">
  <%= f.fields_for paragraph_chunk do |ff| %>
    <fieldset>
      <legend><%= legend_content %></legend>
      <div class="form-group">
        <%= ff.label 'Section title (optional)' %>
        <%= ff.text_field :title, class: 'form-control', placeholder: "Optional section title" %>
      </div>
      <div class="form-group">
        <%= ff.label 'Intro paragraph (optional)' %>
        <%= ff.text_area :intro, class: 'form-control', size: "60x6", placeholder: "Introductory Section Paragraph" %>
      </div>
      <div class="form-group">
        <%= ff.label 'Paragraphs' %>
        <p class="help-block">Enter the paragraphs, each paragraph on a new line.</p>
        <%= ff.text_area :content, class: 'form-control', size: "60x12", placeholder: "Paragaphs" %>
      </div>
      <div class="form-group">
        <%= ff.label 'After paragraph (optional)' %>
        <%= ff.text_area :after, class: 'form-control', size: "60x6", placeholder: "After paragraph" %>
      </div>
    </fieldset>
  <% end %>
</div>
