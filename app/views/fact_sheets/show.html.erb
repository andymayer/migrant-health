<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--home">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 strip__left">
          <%= render 'layouts/breadcrumb' %>
            <div class="jumbotron intro-with-icon">
              <div class="page-icon">
                <%= render 'layouts/icon_image', file_name: 'icon-fact-sheet.svg', alt_text: 'Fact Sheet ' %>
                  <span class="page-icon__label">Fact sheet</span>
              </div>
              <h1 class="title--strip"><%= @fact_sheet.title %></h1>
              <p class="intro"><%= @fact_sheet.intro %></p>
            </div>
        </div>
        <%= render 'layouts/contributed_by', resource: @fact_sheet %>
      </div>
    </div>
  </div>
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="content col-sm-8">
          <%= render 'layouts/renderers/numbered_paragraph_renderer', chunk: @fact_sheet.numbered_paragraph_chunk if @fact_sheet.numbered_paragraph_chunk %>
          <h2>Further information</h2>
          <p>
            The Department of Health has useful training videos, protcols and posters surrounding the mandatory reporting:
          </p>
          <ul class="listing resources-list">
            <li>
              <a href="https://www.gov.uk/government/uploads/system/uploads/attachment_data/file/525405/FGM_mandatory_reporting_map_A.pdf">
              <%= render 'layouts/icon_image', file_name: 'icon-document.svg', alt_text: 'Document' %>

              <h3>Document title</h3>
              <p class="metadata">PDF, 477KB, 2 pages</p>
            </a>
            </li>
            <li>
              <a href="https://www.gov.uk/government/uploads/system/uploads/attachment_data/file/525405/FGM_mandatory_reporting_map_A.pdf">
              <%= render 'layouts/icon_image', file_name: 'icon-document.svg', alt_text: 'Document' %>

              <h3>Another document title with a longer name</h3>
              <p class="metadata">PDF, 477KB, 2 pages</p>
            </a>
            </li>
            <li>
              <a href="https://www.gov.uk/government/publications/fgm-mandatory-reporting-in-healthcare">
              <%= render 'layouts/icon_image', file_name: 'icon-document.svg', alt_text: 'Document' %>

              <h3>Mandatory reporting in healthcare</h3>
              <p class="metadata">Website link - gov.uk</p>
            </a>
            </li>
          </ul>
          <%= render 'layouts/relevant_topics' %>
        </div>
        <div class="col-sm-4">
          <%= render 'layouts/embedded_video', resource: @fact_sheet if @fact_sheet.video_url %>
          <%= render 'layouts/related_resources', resource: @fact_sheet  %>
          <%= link_to 'Edit', edit_fact_sheet_path(@fact_sheet), class: 'btn btn-default' %>
        </div>
      </div>
      <%= render 'layouts/what_are_people_asking' %>
    </div>
  </div>
</section>
