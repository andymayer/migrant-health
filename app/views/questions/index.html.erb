<%= content_for :title,'Questions' %>

<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--questions">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'layouts/breadcrumb' %>
        </div>
        <%= render 'question_strip' %>
      </div>
    </div>
  </div>
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <%= render 'question_banner' %>
          <div id="exTab2" class="">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#1" data-toggle="tab">Top questions</a></li>
              <li><a href="#2" data-toggle="tab">Active questions</a></li>
              <li><a href="#3" data-toggle="tab">Most recent</a></li>
              <li><a href="#4" data-toggle="tab">Open questions</a></li>
            </ul>

            <div class="tab-content ">
              <div class="tab-pane active" id="1">
                <ul class="listing listing--questions">
                  <% Question.top.each do |question| %>
                    <%= render 'question', question: question %>
                  <% end %>
                </ul>
              </div>
              <div class="tab-pane" id="2">
                <ul class="listing listing--questions">
                  <% Question.active.each do |question| %>
                    <%= render 'question', question: question %>
                  <% end %>
                </ul>
              </div>
              <div class="tab-pane" id="3">
                <ul class="listing listing--questions">
                  <% Question.recent.each do |question| %>
                    <%= render 'question', question: question %>
                  <% end %>
                </ul>
              </div>
              <div class="tab-pane" id="4">
                <ul class="listing listing--questions">
                  <% Question.open.each do |question| %>
                    <%= render 'question', question: question %>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
