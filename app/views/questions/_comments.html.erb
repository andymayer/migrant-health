<% if thing.comments.exists? %>
  <div class="post-comments">
    <div class="comment-wrap">
      <h3 class="comments-title"><%= pluralize(thing.comments.count, 'comment') %></h3>
      <% thing.comments.each do |comment| %>
        <%= render 'comment', comment: comment %>
      <% end %>
    </div>
  </div>
<% end %>
