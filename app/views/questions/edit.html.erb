<%= content_for :title, 'Edit my question' %>

<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--questions">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'layouts/breadcrumb' %>
        </div>
        <div class="col-md-12">
          <div class="post-wrap">
            <div class="post post--question">
              <%= form_with(model: @question, local: true) do |f| %>
                <%= render 'layouts/form_error_messages', resource: @question %>
                <fieldset>
                  <legend>Edit your question</legend>
                    <p class="help-block">Use this form to update your question and add clarifications and notes if necessary to help people answer it.</p>
                  <div class="form-group">
                   <%= f.text_area :content, class: 'form-control', size: "60x4", placeholder: "Question?" %>
                  </div>
                </fieldset>
                <fieldset>
                  <div class="form-group">
                    <%= f.label "question[topic_list][]", 'Topics' %>
                    <%= select_tag "question[topic_list][]",
                      options_from_collection_for_select(@topics, "name", "name", @question.topic_list),
                      id: "topic-placeholder",
                      data: { placeholder: "Choose the topics" },
                      multiple: 'multiple',
                      class: 'form-control' %>
                  </div>
                </fieldset>
                <div class="actions">
                  <%= f.submit 'Update', class: 'btn btn-default' %>
                  <%= link_to 'Cancel', questions_path, class: 'btn btn-default' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
