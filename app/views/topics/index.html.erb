<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--home">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 strip__left">
          <%= render 'layouts/breadcrumb' %>
          <div class="jumbotron">
            <h1 class="title--strip">Topics</h1>
            <p class="intro">
              Weâ€™re here as a reference point and resource to help you with your questions about new migrants.
            </p>
          </div>
        </div>
      </div>
      <%= render 'layouts/search_widget', search_path: search_path %>
    </div>
  </div>

  <div class="strip strip--topics">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <% if @topics.count > 0 %>
            <ul class="listing listing--large">
              <% @topics.each do |topic| %>
                <li>
                  <%= link_to topic_path(topic) do %>
                  <%= render 'layouts/icon_image', file_name: 'icon-topic.svg', alt_text: 'Topic' %>
                    <h3 class="listing__title"><%= topic.name %></h3>
                    <p class="listing__desc"><%= topic.description %></p>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No Topics found</p>
          <% end %>
        </div><!-- /col-md-9 -->
        <div class="col-md-3">
          <%= link_to 'View all topics', topics_path %>
        </div>
      </div>
    </div>
  </div>
  <% if current_user.try(:admin?)  %>
    <div class="strip">
      <div class="container">
        <div class="row">
          <h2>Create new topic</h2>
          <div class="col-sm-8">
           <%= link_to 'New topic', new_topic_path, class: 'btn-info btn' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
