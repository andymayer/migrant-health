<%= content_for :title, @practice_example.title %>

<section class="section" aria-label="Content">
  <%= render 'resources/show_strip', resource: @practice_example %>
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="content col-sm-8">
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @practice_example.what_was_the_problem_chunk, intro_class: true if @practice_example.what_was_the_problem_chunk %>
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @practice_example.how_did_we_approach_it_chunk if @practice_example.how_did_we_approach_it_chunk %>
          <%= render 'layouts/renderers/numbered_paragraph_renderer', chunk: @practice_example.what_did_we_do_chunk if @practice_example.what_did_we_do_chunk %>
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @practice_example.did_it_work_chunk if @practice_example.did_it_work_chunk %>
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @practice_example.recommendations_chunk if @practice_example.recommendations_chunk %>
          <h2>
            Optional links to contributing author profiles
          </h2>
          <%= render 'layouts/relevant_topics' %>
        </div>
        <div class="col-sm-4">
          <%= render 'layouts/embedded_video', resource: @practice_example if @practice_example.video_url %>
          <%= render 'layouts/related_resources', resource: @practice_example %>
          <%= link_to 'Edit', edit_resources_practice_example_path(@practice_example), class: 'btn btn-default' %>
        </div>
      </div>
    </div>
    <div class="container">
      <%= render 'layouts/what_are_people_asking' %>
    </div>
  </div>
</section>

