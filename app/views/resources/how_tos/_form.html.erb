<div>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#common" aria-controls="basic" role="tab" data-toggle="tab">Basic</a></li>
    <li role="presentation"><a href="#before-in-prep" aria-controls="before-in-prep" role="tab" data-toggle="tab">Before/In Preparation</a></li>
    <li role="presentation"><a href="#during-consultation" aria-controls="during-consultation" role="tab" data-toggle="tab">During Consultation</a></li>
    <li role="presentation"><a href="#after-care" aria-controls="after-care" role="tab" data-toggle="tab">After Care</a></li>
    <li role="presentation"><a href="#further-information" aria-controls="further-information" role="tab" data-toggle="tab">Further Information</a></li>
  </ul>
</div>
<div class="sg-body sg-container container">
  <%= form_with(model: resource, local: true) do |f| %>
    <h2>All fields are mandatory unless specified optional</h2>

    <%= render 'layouts/form_error_messages', resource: resource %>
    <div class="tab-content">
      <%= render 'layouts/forms/common_resource_form_fields', resource: resource, f: f %>

      <%= render 'layouts/forms/new_edit_paragraph', paragraph_chunk: :before_in_preparation_chunk, tab_id: 'before-in-prep',
            legend_content: 'Before/In Preparation Section', f: f %>

      <%= render 'layouts/forms/new_edit_paragraph', paragraph_chunk: :during_consultation_chunk, tab_id: 'during-consultation', legend_content: 'During Consultation', f: f %>

      <%= render 'layouts/forms/new_edit_paragraph', paragraph_chunk: :after_aftercare_chunk, tab_id: 'after-care', legend_content: 'After/Aftercare', f: f %>

      <%= render 'layouts/forms/new_edit_further_information', further_information_chunk: :further_information_chunk, tab_id: 'further-information', legend_content: 'Further Information', title_placeholder_content: 'Further Information', f: f, resource: resource %>

    </div>
    <div class="actions">
      <%= f.submit nil, class: 'btn btn-default' %>
      <%= link_to 'Cancel', polymorphic_path(resource), class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
