<section class="section" aria-label="Content">
  <%= render 'index_strip', resource_type: @resource_type %>
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <ul class="listing listing--large">
            <li>
              <%= link_to resources_fact_sheets_path do %>
                <%= render "layouts/icon_image", file_name: "icon-fact-sheet.svg", alt_text: "Factsheets" %>
                <h3 class="listing__title">Factsheets</h3>
                <p class="listing__desc">Overview of specific topic areas, with key facts</p>
              <% end %>
            </li>
          </ul>
          <ul class="listing listing--large">
            <li>
              <%= link_to resources_how_tos_path do %>
                <%= render "layouts/icon_image", file_name: "icon-how-to.svg", alt_text: "How tos" %>
                <h3 class="listing__title">How-tos</h3>
                <p class="listing__desc">Practical guides on issues facing primary care staff</p>
              <% end %>
            </li>
          </ul>
          <ul class="listing listing--large">
            <li>
              <%= link_to resources_practice_examples_path do %>
                <%= render "layouts/icon_image", file_name: "icon-practice-example.svg", alt_text: "Practice example" %>
                <h3 class="listing__title">Practical/bright ideas</h3>
                <p class="listing__desc">Highlighting innovative and good practice</p>
              <% end %>
            </li>
          </ul>
          <ul class="listing listing--large">
            <li>
              <%=link_to resources_tools_path do%>
                <%= render "layouts/icon_image", file_name: "icon-tool.svg", alt_text: "Tool" %>
                <h3 class="listing__title">Tools and templates</h3>
                <p class="listing__desc">For you to use and adapt</p>
              <% end %>
            </li>
          </ul>
          <ul class="listing listing--large">
            <li>
              <%= link_to resources_countries_path do %>
              <%= render "layouts/icon_image", file_name: "icon-country.svg", alt_text: "Country" %>
                <h3 class="listing__title">Country context</h3>
                <p class="listing__desc">For quick reference</p>
              <% end %>
            </li>
          </ul>

        </div>
      </div>
    </div>
  </div>
  <% if current_user.try(:admin?)  %>
    <div class="strip">
      <div class="container">
        <div class="row">
          <h2>Create new resource</h2>
          <div class="col-sm-8">
           <%= link_to 'Fact Sheet', new_resources_fact_sheet_path, class: 'btn-info btn' %>
           <%= link_to 'How To', new_resources_how_to_path, class: 'btn-info btn' %>
           <%= link_to 'Practice Example', new_resources_practice_example_path, class: 'btn-info btn' %>
           <%= link_to 'Tool', new_resources_tool_path, class: 'btn-info btn' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
