<%= content_for :title, @tool.title %>

<section class="section" aria-label="Content">
  <%= render 'resources/show_strip', resource: @tool %>
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="content col-sm-8">
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @tool.explanation_chunk, intro_class: true if @tool.explanation_chunk %>
          <%= render 'layouts/renderers/paragraph_renderer', chunk: @tool.where_it_s_from_chunk if @tool.where_it_s_from_chunk %>
          <%= render 'layouts/renderers/numbered_paragraph_renderer', numbered_paragraph_chunk: @tool.numbered_paragraph_chunk if @tool.numbered_paragraph_chunk %>
          <%= render 'layouts/renderers/further_information_renderer', chunk: @tool.attachments_chunk if @tool.attachments_chunk %>

          <h2>
            Optional links to contributing author profiles
          </h2>
          <%= render 'layouts/relevant_topics' %>
        </div>
        <div class="col-sm-4">
          <%= render 'layouts/embedded_video', video_url: @tool.video_url if @tool.video_url %>
          <%= render 'layouts/related_resources', resource: @tool %>
          <%= link_to 'Edit', edit_resources_tool_path(@tool), class: 'btn btn-default' %>
        </div>
      </div>
    </div>
    <div class="container">
      <%= render 'layouts/what_are_people_asking' %>
    </div>
  </div>
</section>
