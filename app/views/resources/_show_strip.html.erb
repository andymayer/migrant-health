<div class="strip strip--brand-color strip--home">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 strip__left">
        <%= render 'layouts/breadcrumb' %>
          <div class="jumbotron intro-with-icon">
            <div class="page-icon">
              <%= render 'layouts/icon_image', file_name: resource.icon_file_name, alt_text: resource.icon_alt_text %>
              <span class="page-icon__label"><%= resource.class.name.titleize %></span>
            </div>
            <h1 class="title--strip"><%= resource.title %></h1>
            <p class="intro"><%= resource.intro %></p>
          </div>
      </div>
      <%= render 'layouts/contributed_by', resource: resource %>
    </div>
  </div>
</div>
