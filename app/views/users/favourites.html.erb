<%= content_for :title, 'My favourites' %>

<section class="section" aria-label="Content">
  <div class="strip strip--brand-color strip--resources">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 strip__left">
          <%= render 'layouts/breadcrumb' %>
          <div class="jumbotron">
            <h1 class="title--strip">My favourites</h1>
            <p class="intro">You have saved <%=pluralize @resources.count, "resource"%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section" aria-label="Content">
  <div class="strip">
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <% unless @resources.nil? %>
            <ul class="listing listing--large">
              <% @resources.each do |resource| %>
                <li>
                  <%= link_to polymorphic_path(resource) do %>
                    <%= render 'layouts/icon_image', file_name: resource.icon_file_name, alt_text: resource.icon_alt_text %>
                    <h3 class="listing__title"><%= resource.title %></h3>
                    <p class="listing__desc"><%= resource.intro %></p>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No resources</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
